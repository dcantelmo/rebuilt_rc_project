<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.3.0/socket.io.js"></script>
    <link rel="stylesheet" href="/public/css/draw.css">

<body>
    <div class="content">
        
        <div id="app" room="<%= ROOM %>" pass="<%= PASSWORD %>" username="<%= USERNAME %>">
            <Vuewinner :socket="socket"></Vuewinner>
            <Vueword :socket="socket"></Vueword>
            <div class="row">
                <div class="col">
                    <Vuecanvas v-if="socket" ref="myCanvas" :mode="canvasMode" :key="canvasMode" :socket="socket">
                    </Vuecanvas>
                </div>
                <div class="col">
                    <Vueusers :socket="socket"></Vueusers>
                </div>
            </div>
            <input type="color" @change="changeColor($event)" pattern="#[0-9A-Fa-f]{6}"
                placeholder="Hex Color in this format -> #000000" />
            <button class="btn btn-outline-info" @click="change()">{{canvasMode}}</button>
            <button class="btn btn-outline-success" v-if="canvasMode == 'drawer'" id='start'
                @click="start($event)">Start</button>
            <h4>Timer: {{timer}}</h4>
            <Vuechat :socket="socket"></Vuechat>

        </div>
    </div>
    <script src="/public/js/draw.js"></script>
</body>

</html>